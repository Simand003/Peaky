 <androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:padding="10dp">

     <ImageView
         android:id="@+id/icon_sport"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/sport_ic_hiking"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"/>

     <TextView
         android:id="@+id/text"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="@string/default_sports"
         android:textSize="16sp"
         app:layout_constraintStart_toEndOf="@id/icon_sport"
         app:layout_constraintEnd_toStartOf="@id/image_view_check"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />

     <ImageView
         android:id="@+id/image_view_check"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/baseline_radio_button_unchecked_24"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

