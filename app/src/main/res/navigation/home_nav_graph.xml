<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.peaky.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.peaky.ui.home.MapsFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_maps" >
    </fragment>

    <fragment
        android:id="@+id/recordFragment"
        android:name="com.example.peaky.ui.home.record.RecordFragment"
        android:label="Record"
        tools:layout="@layout/fragment_record">
        <action
            android:id="@+id/action_recordFragment_to_saveActivityFragment"
            app:destination="@id/saveActivityFragment"/>
    </fragment>

    <fragment
        android:id="@+id/saveActivityFragment"
        android:name="com.example.peaky.ui.home.record.saveactivity.SaveActivityFragment"
        android:label="Save Activity"
        tools:layout="@layout/fragment_save_activity" />

    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.example.peaky.ui.home.ChallengesFragment"
        android:label="Achievements"
        tools:layout="@layout/fragment_challenges" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.peaky.ui.home.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_equipmentFragment"
            app:destination="@id/usersEquipmentFragment"/>
    </fragment>

    <fragment
        android:id="@+id/usersEquipmentFragment"
        android:name="com.example.peaky.ui.home.profile.users_equipment.UsersEquipmentFragment"
        android:label="Equipment"
        tools:layout="@layout/fragment_users_equipment">
        <action
            android:id="@+id/action_equipmentFragment_to_manageEquipmentFragment"
            app:destination="@id/manageEquipmentFragment"/>
        <action
            android:id="@+id/action_equipmentFragment_to_selectedEquipmentFragment"
            app:destination="@id/selectedEquipmentFragment"/>
    </fragment>

    <fragment
        android:id="@+id/manageEquipmentFragment"
        android:name="com.example.peaky.ui.home.profile.users_equipment.manage_equipment.ManageEquipmentFragment"
        android:label="Add Equipment"
        tools:layout="@layout/fragment_manage_equipment" />

    <fragment
        android:id="@+id/selectedEquipmentFragment"
        android:name="com.example.peaky.ui.home.profile.users_equipment.selected_equipment.SelectedEquipmentFragment"
        android:label="Selected Equipment"
        tools:layout="@layout/fragment_selected_equipment" />
</navigation>